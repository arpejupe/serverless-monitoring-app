{
  "private": true,
  "name": "cicd",
  "version": "0.0.1",
  "description": "CICD setup",
  "main": "index.js",
  "author": "Erez Rokah",
  "license": "MIT",
  "devDependencies": {
    "aws-sdk": "^2.453.0",
    "colors": "^1.3.3",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-jest": "^22.5.1",
    "fs-extra": "^8.0.0",
    "jest": "23.6.0",
    "js-yaml": "^3.13.1",
    "minimist": "^1.2.0",
    "serverless-plugin-cicd": "file:./serverless-plugin-cicd"
  },
  "scripts": {
    "setup": "serverless deploy",
    "cleanup": "serverless remove",
    "storeGithubTokenStaging": "aws ssm put-parameter --name github-token --type String --region $npm_package_regions_staging",
    "storeAdminEmailStaging": "aws ssm put-parameter --name admin-email --type String --region $npm_package_regions_staging",
    "storeGithubTokenProd": "aws ssm put-parameter --name github-token --type String --region $npm_package_regions_prod",
    "storeAdminEmailProd": "aws ssm put-parameter --name admin-email --type String --region $npm_package_regions_prod",
    "lint": "eslint scripts/**/*.js serverless-plugin-cicd/**/*.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:ci": "JEST_JUNIT_OUTPUT=../../reports/junit/${npm_package_name}-test-results.xml yarn test --runInBand --ci",
    "coverage": "yarn test --coverage",
    "prettier": "prettier --write scripts/**/*.js serverless-plugin-cicd/*.js jest.config.js",
    "prettier:ci": "prettier --list-different scripts/**/*.js serverless-plugin-cicd/*.js jest.config.js",
    "print:name": "echo ${npm_package_name}"
  },
  "regions": {
    "staging": "eu-west-1",
    "prod": "eu-central-1"
  }
}
